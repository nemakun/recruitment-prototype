generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Attendance {
  id        String   @id @default(cuid())
  date      String
  type      String
  time      BigInt
  createdAt DateTime @default(now())

  @@index([date])
}

model DailySummary {
  date        String  @id
  month       String
  inTime      BigInt?
  outTime     BigInt?
  workedMs    BigInt?
  updatedAt   DateTime @updatedAt
}
